

@{
    ViewBag.Title = "ניהול טקסונומיה";
    Layout = "~/Views/Shared/_TaxonomyManagmentLayout.cshtml";
}


<script src="@Url.Content("~/Scripts/app/taxonomyEditor.js")"></script>

<div id="grid"></div>

<script type="text/javascript">

    window.taxonomyEditor = new app.taxonomyEditor($("#grid"), null,
    {
        read: "@Url.Action("GetTaxonomies")",
        create: "@Url.Action("AddTaxonomies")",
        update: "@Url.Action("UpdateTaxonomies")",
        destroy: "@Url.Action("DeleteTaxonomies")"
    });

    window.taxonomyEditor.load();
</script>
 
